<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.stage.Stage?>

<Stage title="Create new cell rule" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.simosera.gamesoflife.CustomRuleController">
    <scene>
        <Scene>
            <AnchorPane prefHeight="474.0" prefWidth="652.0">
            <children>
               <TextField fx:id="nameTextField" layoutX="191.0" layoutY="14.0" promptText="Custom rule" />
               <Label layoutX="131.0" layoutY="18.0" prefHeight="17.0" prefWidth="43.0" text="Name :" />
               <Pane fx:id="neighbourSelectionPanel" layoutX="340.0" layoutY="85.0" prefHeight="300.0" prefWidth="300.0" />
               <Label layoutX="14.0" layoutY="143.0" prefHeight="17.0" prefWidth="249.0" text="Death by Overpopulation when neighbours &gt;" />
               <Spinner fx:id="overpopulationSpinner" editable="true" layoutX="267.0" layoutY="139.0" prefHeight="25.0" prefWidth="59.0" />
               <Label layoutX="15.0" layoutY="175.0" text="Death by Underpopulation when neighbours &lt;" />
               <Spinner fx:id="underpopulationSpinner" editable="true" layoutX="272.0" layoutY="171.0" prefHeight="25.0" prefWidth="56.0" />
               <Label layoutX="15.0" layoutY="218.0" text="Reproduction when neighbours &gt;" />
               <Spinner fx:id="minReproductionSpinner" editable="true" layoutX="210.0" layoutY="214.0" prefHeight="25.0" prefWidth="56.0" />
               <Label layoutX="14.0" layoutY="253.0" text="Reproduction when neighbours &lt;" />
               <Spinner fx:id="maxReproductionSpinner" editable="true" layoutX="207.0" layoutY="249.0" prefHeight="25.0" prefWidth="56.0" />
               <Button layoutX="555.0" layoutY="435.0" mnemonicParsing="false" onAction="#saveButtonPressed" prefHeight="25.0" prefWidth="52.0" text="Save" />
               <Label layoutX="418.0" layoutY="63.0" text="Select the neighbourhood :" />
            </children></AnchorPane>
        </Scene>
    </scene>
</Stage>
